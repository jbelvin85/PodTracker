// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  username      String   @unique
  passwordHash  String
  displayName   String?
  avatarUrl     String?
  externalLinks String[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  decks           Deck[]
  adminOfPods     Pod[]           @relation("PodAdmins")
  pods            Pod[]           @relation("PodMembers")
  podMessages     PodMessage[]
  directMessages  DirectMessage[]
  conversations   Conversation[]  @relation("UserConversations")
}

model Deck {
  id               String   @id @default(cuid())
  name             String
  hasPartner       Boolean  @default(false)
  commanderId      String // Stores the Scryfall card ID
  partnerId        String? // Stores the optional second commander's Scryfall ID
  shortDescription String?
  externalLinks    String[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String
}

model Pod {
  id          String  @id @default(cuid())
  name        String  @unique
  description String?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  admin   User   @relation("PodAdmins", fields: [adminId], references: [id], onDelete: Restrict)
  adminId String

  members  User[]       @relation("PodMembers")
  messages PodMessage[]
}

// --- Chat Models ---

// For Pod-specific chat channels
model PodMessage {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  // Relations
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  pod   Pod    @relation(fields: [podId], references: [id], onDelete: Cascade)
  podId String

  @@index([podId, createdAt])
}

// For Direct Messaging between users
model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  participants User[]          @relation("UserConversations")
  messages     DirectMessage[]
}

model DirectMessage {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())

  // Relations
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId String

  @@index([conversationId, createdAt])
}
