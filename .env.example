# .env.example

# Database Configuration (Main)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=podtracker_db
DB_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:${DB_PORT}/${POSTGRES_DB}

# Database Configuration (Test)
TEST_DB_PORT=5433
# Note: The test database name is hardcoded to 'podtracker_test' in docker-compose.yml
# The DATABASE_URL for the test-runner service is constructed within docker-compose.yml
# TEST_DATABASE_URL is for the main backend service to know about the test DB if needed
TEST_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@test-db:${TEST_DB_PORT}/podtracker_test

# Application Ports
BACKEND_PORT=3001
FRONTEND_PORT=5173

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here
